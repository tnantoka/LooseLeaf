<!DOCTYPE html>
<html>
<head>
<script>
var config = <%- JSON.stringify(config) %>;
</script>

  <title><%= title ? title + ' - ' : '' %><%= config.site.title %></title>
  <link rel='stylesheet' href='<%= config.process.loc %>/bootstrap/bootstrap.css' />
  <link rel='stylesheet' href='<%= config.process.loc %>/stylesheets/container-app.css' />
  <link rel='stylesheet' href='<%= config.process.loc %>/stylesheets/style.css' />

<%- body %>

<% if (req.session.user) { %>
<script src="<%= config.process.loc %>/javascripts/files.js"></script>
<% } %>

<% if (config.analytics_id) { %>
<script>
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', '<%= config.analytics_id %>']);
  _gaq.push(['_trackPageview']);
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
<% } %>

</body>
</html>
